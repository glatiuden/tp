<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1" id="mainPanel" fx:id="mainPanel" xmlns="http://javafx.com/javafx/11">
    <children>
        <VBox HBox.hgrow="ALWAYS">
            <children>
                <HBox style="-fx-background-color: #383838;">
                    <children>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../images/favorite_icon.png"/>
                            </image>
                        </ImageView>
                        <Label alignment="CENTER" prefHeight="25.0" style="-fx-text-fill: white;"
                               styleClass="cell_big_label" text="Favorites">
                            <HBox.margin>
                                <Insets left="4.0"/>
                            </HBox.margin>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>

                <VBox fx:id="personList" minWidth="340" prefWidth="150.0" styleClass="pane-with-border"
                      VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10"/>
                    </padding>
                    <StackPane fx:id="personListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
                </VBox>
            </children>
        </VBox>
        <VBox prefWidth="150.0" HBox.hgrow="ALWAYS">
            <children>
                <HBox alignment="CENTER" style="-fx-background-color: #383838;">
                    <children>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../images/calendar_icon.png"/>
                            </image>
                        </ImageView>
                        <Label alignment="CENTER" prefHeight="25.0" style="-fx-text-fill: white;"
                               styleClass="cell_big_label" text="Schedule">
                            <HBox.margin>
                                <Insets left="4.0"/>
                            </HBox.margin>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>

                <StackPane fx:id="calendarViewPane" maxHeight="300.0" minHeight="-Infinity"
                           prefHeight="250.0" style="-fx-background-color: #383838"
                           styleClass="pane-with-border" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="5" left="10" right="10" top="5"/>
                    </padding>
                </StackPane>
                <VBox fx:id="appointmentList" prefWidth="150.0" styleClass="pane-with-border">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10"/>
                    </padding>
                    <children>
                        <StackPane fx:id="appointmentListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</HBox>
