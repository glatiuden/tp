<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Reminders" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
        <stylesheets>
            <URL value="@../DarkTheme.css" />
            <URL value="@ReminderWindowStyle.css" />
        </stylesheets>
        <VBox alignment="CENTER" style="-fx-background-color: #383838;">
            <opaqueInsets>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </opaqueInsets>
            <padding>
               <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
            </padding>
            <children>
               <HBox prefHeight="250.0" prefWidth="600.0">
                  <children>
                     <VBox prefHeight="200.0" prefWidth="100.0">
                        <children>
                           <Label alignment="CENTER" contentDisplay="CENTER" text="TOMORROW'S REMINDERS" textAlignment="CENTER" textFill="WHITE" VBox.vgrow="ALWAYS">
                              <font>
                                 <Font name="Arial Black" size="13.0" />
                              </font>
                           </Label>
                           <StackPane fx:id="tomorrowReminderPanelPlaceholder" minWidth="-Infinity" prefWidth="300.0" />
                        </children>
                     </VBox>
                     <StackPane fx:id="todayReminderPanelPlaceholder" minWidth="-Infinity" prefWidth="300.0" />
                  </children>
               </HBox>
                <HBox prefHeight="250.0" prefWidth="600.0">
                  <children>
                     <StackPane fx:id="appointmentPanelPlaceholder" minWidth="-Infinity" prefWidth="300.0" />
                     <StackPane fx:id="schedulePanelPlaceholder" minWidth="-Infinity" prefWidth="300.0" />
                  </children>
               </HBox>
            </children>
         </VBox>
    </Scene>
  </scene>
</fx:root>
